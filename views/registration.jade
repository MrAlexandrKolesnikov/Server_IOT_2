doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title Registartion
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='stylesheet', href='/stylesheets/registration/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/registration/bootstrap-responsive.css')
        style(type='text/css').
            body {
                padding-top: 40px;
                padding-bottom: 40px;
                background-color: #f5f5f5;
            }

            .form-signin {
                max-width: 300px;
                padding: 19px 29px 29px;
                margin: 0 auto 20px;
                background-color: #fff;
                border: 1px solid #e5e5e5;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
                -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
                box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
            }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    body
        .container
            form.form-signin(method='post', action='auth/registr')
                h2.form-signin-heading Registration form
                h6.form-signin-heading name
                input.input-block-level(type='text', name='name')
                h6.form-signin-heading email
                input.input-block-level(type='text', name='email')
                h6.form-signin-heading password
                input.input-block-level(type='password', name='password')
                input(type='submit')